@page "/"

@inject IMatchService MatchService
<!-- LOGO HEADER -->
<div id="logo-header">
    <img id="logo-img" src="/css/images/logo.png" alt="">
</div>
<!-- LOGO HEADER -->
<!-- HEADER -->
<div id="header" style="height: 20rem;" class="bg-primary">
    <div id="header-background" style="width: 100%; height: 100%;">

        <div class="p-5" style="direction: rtl; font-size: 50px; margin-right: 100px; color: white">
            <h1 style="font-size: 70px; font-weight: 800;">كأس</h1>
            <h1 style="font-size: 90px; font-weight: 800">العالم</h1>
        </div>
    </div>
</div>
<!--// HEADER //-->
<!-- QATAR WORD -->
<div class="d-flex justify-content-center" style="margin-top: 30px;">
    <img src="/css/images/qatar-word.png" alt="" style="width: 400px">
</div>
<!--// QATAR WORD //-->
<!-- MAIN CONTENT -->
<div class="container" style="margin-top: 50px">

    <!-- STANDINGS -->
    <div class="p-5 mt-1">

        <!-- TITLE ROW -->
        <div class="row" style="direction: rtl;">
            <h1>
                <b>
                    المجموعات
                </b>
            </h1>
            <hr>
        </div>
        <!--// TITLE ROW //-->
        <!-- STANDINGS ROW -->
        <div class="row" id="standings">
            @if (_standingsResponseDto != null)
            {
                foreach (var item in _standingsResponseDto.Standings)
                {
                    <!-- STANDING COL -->
                    <div class="col-sm-6 mb-4">
                        <div class="card shadow border-none">
                            <div class="card-header bg-primary" style="text-align: center;">
                                <b>@item.Group.Replace('_',' ').ToUpper()</b>
                            </div>

                            <div class="row m-0 bg-secondary">
                                <div class="col-sm-4" style="text-align: center;">
                                    Team
                                </div>

                                <div class="col-sm-2" style="text-align: center;">
                                    W
                                </div>

                                <div class="col-sm-2" style="text-align: center;">
                                    D
                                </div>

                                <div class="col-sm-2" style="text-align: center;">
                                    L
                                </div>

                                <div class="col-sm-2" style="text-align: center;">
                                    Pts
                                </div>
                            </div>

                            <!-- TEAMS -->
                            <ul class="list-group list-group-flush">

                                @foreach (var teamRow in item.Table)
                                {
                                    <!-- TEAM -->
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-sm-4 d-flex justify-content-center align-itmes-center" style="text-align: center;">
                                                <span class="flag">
                                                    <img style="width: 40px; height: 40px"
                                                         class="rounded-circle"
                                                         src="@teamRow.Team.Crest" alt="">
                                                </span>

                                                <h5 style="margin: auto 4px">
                                                    <b>@teamRow.Team.Tla</b>
                                                </h5>
                                            </div>
                                            <!-- TEAM Won-->
                                            <div class="col-sm-2" style="text-align: center;">
                                                @teamRow.won
                                            </div>
                                            <!-- TEAM Won-->
                                            <!-- TEAM Drow-->
                                            <div class="col-sm-2" style="text-align: center;">
                                                @teamRow.draw
                                            </div>
                                            <!-- TEAM Drow-->
                                            <!-- TEAM Lost-->
                                            <div class="col-sm-2" style="text-align: center;">
                                                @teamRow.lost
                                            </div>
                                            <!-- TEAM Lost-->
                                            <div class="col-sm-2" style="text-align: center;">
                                                <b>@teamRow.points</b>
                                            </div>
                                        </div>
                                    </li>
                                    <!--// TEAM //-->
                                }

                            </ul>
                            <!--// TEAMS //-->
                        </div>
                    </div>
                    <!--// STANDING COL //-->
                }
                
            }








        </div>
        <!--// STANDINGS ROW //-->
    </div>
    <!--// STANDINGS //-->
    <!-- MATCHES -->
    <div>

        <!-- TITLE ROW -->
        <div class="row" style="direction: rtl;">
            <h1>
                <b>
                    المباريات
                </b>
            </h1>
            <hr>
        </div>
        <!--// TITLE ROW //-->
        <!-- MATCHES ROW -->
        <div class="row" id="matches">

            @if (_MatchesResponseDto!=null)
            {
                if (_MatchesResponseDto.Matches.Any())
                {
                    foreach (var match in _MatchesResponseDto.Matches)
                    {
                        <!-- MATCH COL -->
                        <div class="col-sm-12">

                            <div class="card shadow rounded-pill" style="overflow: hidden;">
                                <div class="card-body p-0">
                                    <div class="row" style="height: 120px;">

                                        <!-- FIRST TEAM COL -->
                                        <div class="col-sm-3 bg-primary d-flex flex-direction-column justify-content-center align-itmes-center"
                                             style="border-right: solid 5px #5b0d25; ">

                                            <div class="d-flex align-items-center justify-content-center">
                                                <!-- IMAGE AND TEAM NAME DIV -->
                                                <div>
                                                    <div class="flag">
                                                        <img style="width: 40px; height: 40px"
                                                             class="rounded-circle"
                                                             src="@match.homeTeam.Crest" alt="">
                                                    </div>

                                                    <h5 style="margin: auto 4px">
                                                        <b>@match.homeTeam.Tla
                                                        
                                                        
                                                        
                                                        
                                                        
                                                        </b>
                                                    </h5>
                                                </div>
                                                <!--// IMAGE AND TEAM NAME DIV// -->
                                            </div>
                                        </div>
                                        <!--// FIRST TEAM COL //-->
                                        <!-- MATCH INFO COL -->
                                        <div class="col-sm-6" style="text-align: center;">
                                            <h6>@match.group.Replace('_', ' ').ToUpper()</h6>
                                            <h1>X</h1>
                                            <h6>@match.utcDate.ToLocalTime()</h6>
                                        </div>
                                        <!--// MATCH INFO COL //-->
                                        <!-- SECOND TEAM COL -->
                                        <div class="col-sm-3 bg-primary d-flex flex-direction-column justify-content-center align-itmes-center"
                                             style="border-left: solid 5px #5b0d25; ">

                                            <div class="d-flex align-items-center justify-content-center">
                                                <!-- IMAGE AND TEAM NAME DIV -->
                                                <div>
                                                    <div class="flag">
                                                        <img style="width: 40px; height: 40px"
                                                             class="rounded-circle"
                                                             src="@match.awayTeam.Crest" alt="">
                                                    </div>

                                                    <h5 style="margin: auto 4px">
                                                        <b>@match.awayTeam.Tla</b>
                                                    </h5>
                                                </div>
                                                <!--// IMAGE AND TEAM NAME DIV// -->
                                            </div>
                                        </div>
                                        <!--// SECOND TEAM COL //-->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--// MATCH COL //-->
                    }
                }

                else
                {
                    <h3>لاتوجد مباراة لهذا اليوم</h3>
                }
            }
            
        </div>
        <!--// MATCHES ROW //-->

    </div>
    <!--// MATCHES //-->
</div>
<!-- // MAIN CONTENT // -->

@code{
    private StandingsResponseDto _standingsResponseDto;
    private MatchResponseDto _MatchesResponseDto;

    protected override async Task OnInitializedAsync()
    {
        _standingsResponseDto = await MatchService.GetStandings();


        _MatchesResponseDto = await MatchService.GetTodayMatches();



    }

}